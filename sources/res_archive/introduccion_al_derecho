    <script>
        function loadPDF(url, element) {
            // Actualizar el Iframe
            const viewer = document.getElementById('pdf-viewer');
            viewer.src = url;

            // Actualizar UI del Nav
            document.querySelectorAll('.file-item').forEach(item => item.classList.remove('active'));
            element.classList.add('active');

            // Actualizar Path en Header
            const fileName = element.innerText;
            document.getElementById('current-path').innerText = `/root/vault/${fileName}`;
        }

        // Cargar el primero por defecto
        window.onload = () => {
            const firstItem = document.querySelector('.file-item');
            if(firstItem) firstItem.click();
        };
    </script>
